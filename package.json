{
  "name": "data-analysis-system",
  "version": "1.0.0",
  "description": "Տվյալների վերլուծության համակարգ - Մենեջերի, վերլուծաբանի և փորձագետի համատեղ աշխատանքի պլատֆորմ",
  "author": "Data Analysis Team",
  "license": "MIT",
  "keywords": [
    "data-analysis",
    "fuzzy-logic",
    "clustering",
    "synthetic-data",
    "armenian",
    "react",
    "tailwindcss"
  ],
  "homepage": ".",
  "private": true,
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "d3": "^7.8.5",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.263.1",
    "mathjs": "^11.11.0",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.2",
    "react-scripts": "5.0.1",
    "recharts": "^2.8.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.0",
    "@types/lodash": "^4.14.195",
    "@types/papaparse": "^5.3.7",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "analyze": "npm run build && npx source-map-explorer 'build/static/js/*.js'",
    "deploy": "npm run build && echo 'Ready for deployment'",
    "clean": "rm -rf build node_modules && npm install",
    "dev": "npm start",
    "preview": "npm run build && npx serve -s build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/data-analysis-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/data-analysis-system/issues"
  },
  "config": {
    "analysis": {
      "defaultDataType": "demographic",
      "maxSyntheticDataRows": 1000,
      "maxClusterCount": 10,
      "supportedFormats": [
        "csv",
        "json",
        "xlsx"
      ]
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/reportWebVitals.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}
